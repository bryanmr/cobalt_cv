<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
    <style>
{% include site.css %}
    </style>
    <title>{{ site.data.resume.name }}</title>
  </head>
  <body>
    <header id="main_head">
      <h1>{{ site.data.resume.name }}'s CV</h1>
      <nav>
        {%- for role in site.data.resume.roles -%}
          <a id="{{ role | replace: " ", "_" | downcase }}_link" href="javascript:void(0)" onclick="toggleRole('{{ role | replace: " ", "_" | downcase }}');return false">{{ role }}</a>
        {%- endfor -%}
      </nav>
    </header>

    <h2>Summary</h2>
    {%- for summary in site.data.resume.summaries %}
    <div class="summary {{ summary[0] | replace: " ", "_" | downcase }}">
      <h3>{{ summary[0] }}</h3>
      <p>{{ summary[1] }}</p>
    </div>
    {%- endfor %}

    <h2>Experience</h2>
    {%- for job in site.data.resume.experience %}
    {% capture roles %}
      {%- for role in job.roles -%}
      {{ role | replace: " ", "_" | downcase }}{{ " " }}
      {%- endfor -%}
    {% endcapture %}
    <div class="experience {{ roles }}">
      <h3>{{ job.employer }}</h3>
      <div>{{ job.roles[0] }}</div>
      <div>{{ job.when }}</div>
      <ul>
        {%- for bullet in job.responsibilities -%}
        <li>{{ bullet }}</li>
        {%- endfor -%}
      </ul>
    </div>
    {%- endfor %}

    <h2>Degrees</h2>
      {%- for ed in site.data.resume.education %}
      <div class="degrees">
      <h3>{{ ed.school }}</h3>
      <div>{{ ed.where }}</div>
      <div>{{ ed.when }}</div>
      <div>{{ ed.major }}</div>
      <div>{{ ed.degree }}</div>
      </div>
      {%- endfor %}

    <h2>Skills</h2>
    <div class="skills">
      {%- for skill in site.data.resume.skills %}
      <h3>{{ skill.name }}</h3>
      <ul>
        {%- for list in skill.list %}
        <li>{{ list }}</li>
        {%- endfor %}
      </ul>
      {%- endfor %}
    </div>

    <h2>Certifications</h2>
    <ul class="certs">
      {%- for cert in site.data.resume.certs %}
        <li>{{ cert.name }} - {{ cert.date }}</li>
      {%- endfor %}
    </ul>

    <h2>Projects</h2>
    <ul class="projects">
      {%- for project in site.data.resume.projects %}
        <li>{{ project.name }}</li>
      {%- endfor %}
    </ul>

    <h2>Patents</h2>
    <ul class="patents">
      {%- for patent in site.data.resume.patents %}
      <li>{{ patent.name }} as {{ patent.number }} on {{ patent.filed }}</li>
      {%- endfor %}
    </ul>

    <script>
      {% include site.js %}
    </script>
  </body>
</html>
